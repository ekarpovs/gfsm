{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "",
    "title": "FSM's transition descritor",
    "description": "This document records the details of a transition",
    "type": "object",
    "properties": {
        "transitions": {
            "description": "transitions collection",
            "type": "array",
            "properties": {
                "transitions-name": {
                    "description": "transition name",
                    "type": "string"
                },
                "target-state-name": {
                    "description": "target state name",
                    "type": "string"
                },
                "action-name": {
                    "description": "action name",
                    "type": "string"
                },
                "start-action-name": {
                    "description": "start action name",
                    "type": "string"
                },
                "end-action-name": {
                    "description": "end action name",
                    "type": "string"
                }                            
            }
        }                                   
    }      
}     
    