{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "",
    "title": "FSM's state descritor",
    "description": "This document records the details of a state",
    "type": "object",
    "properties": {
        "state-name": {
            "description": "unique state name",
            "type": "string"
        },
        "action-name": {
            "description": "action name",
            "type": "string"
        },
        "start-action-name": {
            "description": "start action name",
            "type": "string"
        },
        "end-action-name": {
            "description": "end action name",
            "type": "string"
        },                            
        "transitions": {
            "description": "state transitions collection",
            "type": "array",
            "properties": {
                "event-name": {
                    "description": "event name",
                    "type": "string"
                },
                "transitions-name": {
                    "description": "transition name",
                    "type": "string"
                }
            }
        }                                   
    }      
}     
    